---
import { GeneratorContainer } from '@components/nujovich/GeneratorContainer'
---

<html lang='en'>
	<head>
		<title>Password Generator</title>
	</head>
	<body id='nujovich-body'>
		<div id='nujovich-root'>
			<GeneratorContainer title='Password Generator' client:visible />
		</div>
		<style>
			#nujovich-body {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
				font-family: 'Roboto Mono', monospace;
				font-size: 50px;
			}
			#nujovich-root {
				max-width: 1280px;
				margin: 0 auto;
				text-align: center;
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
			}
		</style>
	</body>
</html>
