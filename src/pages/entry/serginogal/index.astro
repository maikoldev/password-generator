---
import Layout from '@layout'
import PasswordGenerator from '@components/serginogal/PasswordGenerator'
import Logo from '@components/serginogal/Logo.astro'
---

<Layout title='serginogal'>
	<main>
		<section>
			<Logo />
			<PasswordGenerator client:visible />
		</section>
	</main>
</Layout>

<style>
	@keyframes binary {
		25% {
			content: '01100110 01101111 01110010 00100000 01100001 00100000 01110011 01110101 01110010 01110000 01110010 01101001 01110011 01100101 00100001 00100001 01100110 01101111 01110010 00100000 01100001 00100000 01110011 01110101 01110010 01110000 01110010 01101001 01110011 01100101 00100001 00100001 01100110 01101111 01110010 00100000 01100001 00100000 01110011 01110101 01110010 01110000 01110010 01101001 01110011 01100101 00100001 00100001';
		}
		50% {
			content: '01001111 01110000 01100101 01101110 00100000 01110100 01101000 01100101 00100000 01100011 01101111 01101110 01110011 01101111 01101100 01100101 01001111 01110000 01100101 01101110 00100000 01110100 01101000 01100101 00100000 01100011 01101111 01101110 01110011 01101111 01101100 01100101 01001111 01110000 01100101 01101110 00100000 01110100 01101000 01100101 00100000 01100011 01101111 01101110 01110011 01101111 01101100';
		}
		75% {
			content: '01100110 01101111 01110010 00100000 01100001 00100000 01110011 01110101 01110010 01110000 01110010 01101001 01110011 01100101 00100001 00100001 01100110 01101111 01110010 00100000 01100001 00100000 01110011 01110101 01110010 01110000 01110010 01101001 01110011 01100101 00100001 00100001 01100110 01101111 01110010 00100000 01100001 00100000 01110011 01110101 01110010 01110000 01110010 01101001 01110011 01100101 00100001 00100001';
		}
		100% {
			content: '01001111 01110000 01100101 01101110 00100000 01110100 01101000 01100101 00100000 01100011 01101111 01101110 01110011 01101111 01101100 01100101 01001111 01110000 01100101 01101110 00100000 01110100 01101000 01100101 00100000 01100011 01101111 01101110 01110011 01101111 01101100 01100101 01001111 01110000 01100101 01101110 00100000 01110100 01101000 01100101 00100000 01100011 01101111 01101110 01110011 01101111 01101100';
		}
	}

	@font-face {
		font-family: 'JetBrains Mono';
		font-style: normal;
		font-weight: 500;
		font-display: swap;
		src: url('/JetBrainsMono-Regular.woff2') format('woff2');
	}

	@font-face {
		font-family: 'Orbitron';
		font-style: normal;
		font-weight: 400;
		font-display: swap;
		src: url('/Orbitron-ExtraBold.woff2') format('woff2');
	}

	* {
		user-select: none;
	}

	main::before {
		animation: 1s linear 1s infinite normal none running binary;
		content: '01001111 01110000 01100101 01101110 00100000 01110100 01101000 01100101 00100000 01100011 01101111 01101110 01110011 01101111 01101100 01100101 01001111 01110000 01100101 01101110 00100000 01110100 01101000 01100101 00100000 01100011 01101111 01101110 01110011 01101111 01101100 01100101 01001111 01110000 01100101 01101110 00100000 01110100 01101000 01100101 00100000 01100011 01101111 01101110 01110011 01101111 01101100';
		top: 0px;
		left: 0px;
		color: #e5e1e6;
		font-size: 12px;
		pointer-events: none;
		position: absolute;
		text-align: center;
		width: 100%;
		opacity: 0.3;
		-webkit-mask-image: linear-gradient(
			90deg,
			rgba(0, 0, 0, 0) 5%,
			rgb(0, 0, 0) 20%,
			rgb(0, 0, 0) 80%,
			rgba(0, 0, 0, 0) 95%
		);
		white-space: nowrap;
		overflow: hidden;
		z-index: 200;
	}

	main {
		min-height: 100vh;
		background: url('/grain-dark.png');
	}

	section {
		padding: 4rem 0;
		min-height: calc(100vh - 8rem);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		font-family: 'JetBrains Mono', sans-serif;
		font-weight: 500;
	}

	section::before {
		content: '';
		position: absolute;
		margin: 0px auto;
		left: 0px;
		top: 5vh;
		filter: brightness(0.4) sepia(1) hue-rotate(205deg) saturate(8);
		background-image: url('https://hacktoberfest.com/_next/static/media/grid-square.7c0cbc15.svg');
		opacity: 0.2;
		-webkit-mask-image: radial-gradient(70% 80% at 50% 50%, black 40%, transparent 70%);
		width: 100%;
		min-height: 90vh;
		z-index: -1;
	}

	section::after {
		position: absolute;
		top: 0px;
		left: 0px;
		content: '';
		width: 100%;
		height: 100%;
		background: linear-gradient(45deg, rgb(0, 73, 255) 0%, rgb(255, 105, 185) 100%);
		opacity: 0.2;
		z-index: -2;
		-webkit-mask-image: radial-gradient(70% 80% at 50% 50%, black -40%, transparent 60%);
	}
</style>

